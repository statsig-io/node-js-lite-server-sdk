{
  "include": ["src/**/*", "src/utils/*"],
  "exclude": [
    "node_modules",
    "typings",
    "src/__tests__/*",
    "src/utils/__tests__/*",
    "dist",
    "dist/**/*",
    "dist/src/**/*",
    "build",
    "tsconfig.json"
  ],
  "compilerOptions": {
    "allowJs": false,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020.Promise"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
